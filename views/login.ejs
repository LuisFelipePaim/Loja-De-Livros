<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="index.css">
    <title>Faça o Login</title>
</head>
<body>
<%- include('headerCad'); -%>
<main class="pmain">
    <div class="plogin">
        <div class="plogin_div">
            <p class="plogin_div-p">Faça o Login</p>
        </div>
        <div class="plogin_div">
            <form class="plogin_div-form" action="" method="post">
                <div>
                    <label for="email">Digite seu email:</label> 
                    <input class="plogin_div-input" id="email" type="text">
                </div>
                <div>
                    <label for="senha">Digite sua senha</label>
                    <input class="plogin_div-input" id="senha" type="text">
                </div>
                <div>
                    <button id="loginbutton" type="button" class="plogin_div-inpu">Acessar</button>
                </div>
            </form>
        </div>
        <div class="plogin_div">
            <div class="plogin_div-texto">
                <a class="plogin_div-a" href="#">Conectar com:</a>    
            </div>
            <div class="plogin_div-texto">
                <a class="plogin_div-a" href="./register">Criar conta</a>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <script>
        const loginButton = document.getElementById('loginbutton');
        const mensagem = document.getElementById('mensagem');

loginButton.addEventListener('click', async () => {
  const email = document.getElementById('email').value;
  const senha = document.getElementById('senha').value;

        try {
            const response = await axios.post('http://localhost:3000/login', {
            email: email,
            senha: senha
            });
            
            // Lógica para lidar com a resposta após a requisição ser feita
            console.log('Login bem-sucedido!');
        } catch (error) {
            // Se ocorrer um erro na requisição
            console.error('Erro:', error);
        }
        }); 
    </script>
</main>

<%- include('footerCad'); -%>
</body>
</html>
